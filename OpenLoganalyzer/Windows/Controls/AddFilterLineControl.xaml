<UserControl x:Class="OpenLoganalyzer.Windows.Controls.AddFilterLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenLoganalyzer.Windows.Controls"
             mc:Ignorable="d" Height="190" Width="300" BorderBrush="Black">
    <Grid Margin="0,0,0,0
          ">
        <GroupBox Header="GroupBox" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,10" Background="{x:Null}"/>
                <TextBox Name="TB_FilterLineName" Margin="90,10,10,10" TextWrapping="Wrap" LostFocus="TB_FilterLineName_LostFocus"/>
                <Button x:Name="B_Edit" Content="Edit" Grid.Row="1" Margin="10" Click="B_Edit_Click" IsEnabled="False"></Button>
                <Button x:Name="B_Remove" Content="Remove" Grid.Row="2" Margin="10" Click="B_Remove_Click"></Button>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
