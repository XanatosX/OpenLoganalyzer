<UserControl x:Class="OpenLoganalyzer.Windows.Controls.FilterColumnControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenLoganalyzer.Windows.Controls"
             mc:Ignorable="d" d:DesignWidth="800" Height="175.341">
    <Grid>
        <GroupBox Name="GB_Column" Header="Group Box">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox Name="TB_ColumnName" Height="23" Margin="95,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
                <Button x:Name="B_Edit" Content="Edit" Grid.Row="1" Margin="10" Click="B_Edit_Click"></Button>
                <Button x:Name="B_Remove" Content="Remove" Grid.Row="2" Margin="10" Click="B_Remove_Click"></Button>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
