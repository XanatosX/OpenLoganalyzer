<Window x:Class="OpenLoganalyzer.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenLoganalyzer.Windows"
        xmlns:p="clr-namespace:OpenLoganalyzer.Properties"
        mc:Ignorable="d"
        Title="Popup" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" Topmost="True" WindowStartupLocation="Manual">
    <Grid FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" FrameworkElement.FlowDirection="LeftToRight"/>
            <ColumnDefinition Width="Auto" FrameworkElement.FlowDirection="RightToLeft"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" FrameworkElement.FlowDirection="LeftToRight"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Hello" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="1" Height="Auto" HorizontalContentAlignment="Stretch"/>
        <Button Content="X" Height="Auto" Width="24" Grid.Row="0" HorizontalAlignment="Stretch" Grid.Column="0" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" />

    </Grid>
</Window>
